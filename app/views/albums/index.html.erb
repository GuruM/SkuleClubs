<h2>Listing albums</h2>

<table>
  <tr>
    <th>Name</th>
    <th>Desc</th>
    <th>Tags</th>
    <th>Locked</th>
    <th>User</th>
  </tr>

<% @albums.each do |album| %>
  <tr>
    <td><%=h album.name %></td>
    <td><%=h album.desc %></td>
    <td><%=h album.tags %></td>
    <td><%=h album.locked %></td>
    <td><%=h album.user_id %></td>
    <td><%= link_to 'Show', album %></td>
    <td><%= link_to 'Edit', edit_album_path(album) %></td>
    <td><%= link_to 'Destroy', album, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New album', new_album_path %>