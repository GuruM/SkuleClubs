<h1>Image Upload</h1>

<%= form_tag ({:action => 'create'}, :multipart => true) %>
<p>	<label for="upload_file">Select Image</label> : 
	<%= file_field 'upload', 'download', :accept => 'text/html' %>
</p>

<p>
  <%= label 'image', 'album_id' %><br />
  <%= collection_select ('image', 'album_id', @album, :id, :name, { :prompt => 'Select Album'}) %>
</p>
<p>
  <%= label 'image', 'desc' %><br />
  <%= text_field 'image', 'desc' %>
</p>
<p>
  <%= label 'image', 'tags' %><br />
  <%= text_field 'image', 'tags' %>
</p>

<p>
  <%= label 'image', 'user_id' %><br />
  <%= collection_select ('image', 'user_id', @user, :id, :name, { :prompt => 'Select User'}) %>
</p>
  <p>
    <%= submit_tag 'Upload' %>
  </p>

<%= link_to 'Back', images_path %>