<h1>Listing updates</h1>

<table>
  <tr>
    <th>Club</th>
    <th>User</th>
    <th>Content</th>
  </tr>

<% @updates.each do |updates| %>
  <tr>
    <td><%=h updates.club_id %></td>
    <td><%=h updates.user_id %></td>
    <td><%=h updates.content %></td>
    <td><%= link_to 'Show', updates %></td>
    <td><%= link_to 'Edit', edit_updates_path(updates) %></td>
    <td><%= link_to 'Destroy', updates, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New updates', new_updates_path %>